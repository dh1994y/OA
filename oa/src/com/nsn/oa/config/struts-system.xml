<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	
	<package name="/menu" namespace="/system" extends="struts-default">
		<action name="menuAction_*" class="menuAction" method="{1}">
			<result name="home">
				/WEB-INF/jsp/system/menu/menuHome.jsp
			</result>
			<result name="edit">
				/WEB-INF/jsp/system/menu/menuEdit.jsp
			</result>
			<result name="add">
				/WEB-INF/jsp/system/menu/menuAdd.jsp
			</result>
			<result name="detail">
				/WEB-INF/jsp/system/menu/menuDetail.jsp
			</result>
		</action>
	</package>
	<package name="/user" namespace="/system" extends="struts-default">
		<action name="userAction_*" class="userAction" method="{1}">
			<result name="home">
				/WEB-INF/jsp/system/user/userHome.jsp
			</result>
			<result name="add">
				/WEB-INF/jsp/system/user/userAdd.jsp
			</result>
			<result name="edit">
				/WEB-INF/jsp/system/user/userEdit.jsp
			</result>
			<result name="detail">
				/WEB-INF/jsp/system/user/userDetail.jsp
			</result>
			<result name="loginSucc">
				/WEB-INF/jsp/home.jsp
			</result>
			<result name="loginError">
				/WEB-INF/jsp/login.jsp
			</result>
			<result name="input">
				/WEB-INF/jsp/error.jsp
			</result>
		</action>
	</package>

</struts>
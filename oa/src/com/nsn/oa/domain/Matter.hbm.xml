<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<!-- 定义映射类 表 -->
	<class name="com.nsn.oa.domain.Matter" table="matter">
		<!-- 定义主键映射 -->
		<id name="id" column="id">
			<generator class="uuid"/>
		</id>
		<!-- 定义字段映射 -->
		<property name="matter" column="matter"/>
		<property name="feel" column="feel"/>
		<property name="createDate" column="createDate"/>
		<property name="lastUpdateDate" column="lastUpdateDate"/>
		<property name="createUser" column="createUser"/>
	</class>
</hibernate-mapping>
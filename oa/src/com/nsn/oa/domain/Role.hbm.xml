<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<!-- 定义映射类 表 -->
	<class name="com.nsn.oa.domain.Role" table="role">
		<!-- 定义主键映射 -->
		<id name="id" column="id">
			<generator class="uuid"/>
		</id>
		<!-- 定义字段映射 -->
		<property name="roleName" column="roleName"/>
		
		<!-- 多对多映射 只实现了一端 -->
		<set name="menuSet" table="role_menu" inverse="true" cascade="all" lazy="false">
			<key column="roleId"/>
			<many-to-many column="menuId" class="com.nsn.oa.domain.Menu"/>
		</set>
	</class>
</hibernate-mapping>